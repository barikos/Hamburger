<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/ray_drawer_header"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@drawable/header">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_drawer_user"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/img_user_photo"/>

    <TextView
        android:id="@+id/txt_drawer_header_user"
        style="@style/Drawer_header_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_drawer_user"
        android:layout_marginLeft="20dp"
        android:text="@string/drawer_txt_user"/>

    <TextView
        android:id="@+id/txt_drawer_header_mail"
        style="@style/Drawer_header_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_drawer_header_user"
        android:layout_marginLeft="20dp"
        android:text="@string/drawer_txt_mail"/>


</RelativeLayout>